# Use Python 3.10 to match your current environment
FROM python:3.10-slim

# 1. Install the missing C library (libenchant) and build tools
# We also install gcc in case other packages need to compile code
RUN apt-get update && apt-get install -y \
    libenchant-2-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Set the working directory in the container
WORKDIR /app

# 2. Copy requirements and install Python dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# 3. Copy the rest of your project code
COPY . /app/

# 4. Run the application
# We use --chdir ikamai_prj because your manage.py and wsgi.py are inside that subfolder
CMD ["gunicorn", "--chdir", "ikamai_prj", "ikamai_prj.wsgi:application", "--bind", "0.0.0.0:10000"]